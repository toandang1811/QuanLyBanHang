@model IEnumerable<WebBanHangOnline.Models.EF.ProductImage>
@{
    ViewBag.Title = "Ảnh sản phảm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";


}
<style>
    .glImage {
        padding: 0;
        gap: 10px;
    }

    .glImage li {
        /*flex-direction:*/
        display: inline-block;
        position: relative;
        border: .2rem double #b1b1b1;
        height: 200px;
        border-radius: 15px;
    }

    .glImage li:hover {
        box-shadow: 0px 4px 5px 1px;
        border-color: #1c7cdf;
        cursor: pointer;
    }

    .glImage li img {
        border-radius: 15px 15px 0 0;
    }

    .box-btn {
        gap:3px;
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        justify-content: center;
        display: flex;
        height: 20%;
        background-color: #e7e0e6;
        border-radius: 0 0 15px 15px;
    }

    .col-img-prod {
        padding: 0;
    }

    .block-image-prod {
        width: 100%;
        height: 80%;
    }

    .btnDefault, .btnDelete {
        align-self: center;
    }
</style>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ảnh sản phẩm</h3>

            <div class="card-tools">
                <input type="button" value="Tải ảnh" class="btn btn-success" onclick="BrowseServer('txtImage');" />
            </div>
        </div>
        <div class="card-body">
            <ul class="glImage row">
                @if (Model != null)
                {
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <li id="trow_@item.Id" class="col-4 col-sm-3 col-img-prod">
                            <div class="block-image-prod">
                                <img src="@item.Image" style="width: 100%; height: 100%;" />
                            </div>
                            <div class="box-btn">
                                @if (item.IsDefault)
                                {
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-success btnDefault"><i class="fa fa-check"></i></a>
                                }
                                else
                                {
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-warning btnDefault">X</a>
                                }
                                <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete"><i class="fa fa-trash"></i></a>
                            </div>
                        </li>
                        if (i % 4 == 0)
                        {
                            <li class="w-100 d-none d-md-block"></li>
                        }
                        i = i + 1;
                    }
                }
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

<script>
    function BrowseServer(field) {
        var finder = new CKFinder();
        finder.selectActionFunction = function (fileUrl) {
            debugger;
            AddImage(@ViewBag.productId, fileUrl);
        };
        finder.popup();
    }
    function AddImage(id, url) {
        debugger;
        $.ajax({
            url: '/admin/productimage/AddImage',
            type: 'POST',
            data: { productId: id, url: url },
            success: function (rs) {
                if (rs.Success) {
                    window.location.reload();
                }
            }
        });
    }
    $(document).ready(function () {
        $('body').on('click', '.btnDelete', function () {
            var id = $(this).data('id');
            var conf = confirm('ban có muốn xóa ảnh này không?');
            if (conf === true) {
                $.ajax({
                    url: '/admin/productimage/delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            $('#trow_' + id).remove();
                        }
                    }
                });
            }
        });
    });
</script>