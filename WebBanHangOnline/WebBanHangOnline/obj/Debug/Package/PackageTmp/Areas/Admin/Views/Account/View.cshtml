@model WebBanHangOnline.Models.EditAccountViewModel
@{
    ViewBag.Title = "Cập nhật tài khoản";
    var user = ViewBag.User;
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết tài khoản</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>Tên tài khoản</label>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @readonly = true })
            </div>
            <div class="form-group">
                <label>Họ & tên</label>
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @readonly = true })
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" , @readonly = true})
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @readonly = true })
            </div>
            <div class="form-group">
                <label>Phân quyền</label>
                @Html.TextBoxFor(x => x.RoleName, new { @class = "form-control", @readonly = true })
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
