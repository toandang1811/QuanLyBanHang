
@model WebBanHangOnline.Models.EditAccountViewModel
@{
    ViewBag.Title = "Trang cá nhân";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <span class="nav-link">@ViewBag.Title</span>
        </li>
    </ul>
}

@section style {
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/Profile.css">
}

<div class="container">
    <div class="row align-items-center">
        <div class="col-xl-12 col-lg-12 col-md-12 col-12">
            <!-- Bg -->
            <div class="pt-20 rounded-top"
                 @*style="background:url(https://bootdey.com/image/480x480/00FFFF/000000) no-repeat;
                background-size: cover;"*@>
            </div>
            <div class="card rounded-bottom smooth-shadow-sm">
                <div class="d-flex align-items-center justify-content-between pt-4 pb-6 px-4">
                    <div class="d-flex align-items-center">
                        <div class="avatar-xxl avatar-indicators avatar-online me-2 position-relative d-flex justify-content-end  align-items-end mt-n10">
                            <img src="@(!string.IsNullOrEmpty(Model.Avatar) ? Model.Avatar : "") " class="avatar-xxl rounded-circle border border-2 " alt="Image" id="_avatar">
                            <div class="camera-icon">
                                <img class="camera-avt" src="~/Content/Images/bg/camera.jpg" alt="Camera Icon" onclick="BrowseServer('txtImage')">
                                @Html.HiddenFor(x => x.Avatar, new { @id = "txtImage" })
                            </div>

                        </div>
                        <div class="lh-1">
                            <h2 class="mb-0">
                                @Model.FullName
                                <a href="#!" class="text-decoration-none">

                                </a>
                            </h2>
                            <p class="mb-0 d-block">@*@imjituchauhan*@</p>
                        </div>
                    </div>
                    <div>
                        <a href="#" class="btn btn-success d-none d-md-block">Cập nhật</a>
                    </div>
                </div>
                <ul class="nav nav-lt-tab px-4" id="pills-tab" role="tablist">

                    <li class="nav-item">
                        <a class="nav-link active" href="#"> Followers </a>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="py-6">
        <div class="card-body">
            <div class="form-group">
                <label>Tên tài khoản</label>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @readonly = true})
            </div>
            <div class="form-group">
                <label>Họ & tên</label>
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @readonly = true })
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            </div>
            <input type="button" class="Button" value="Đổi mật khẩu"/>
        </div>
    </div>
</div>
<!-- The Modal -->
<div id="myModalProfile" class="modalProfile">
    <span class="close">&times;</span>
    <img class="modal-content-profile" id="imgProfile">
</div>
@section scripts{
    <script src="~/Areas//Admin//Scripts/jsProfile.js"></script>
}